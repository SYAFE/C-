using System;

namespace Enum3
{
    class MainApp
    {
        static void Main(string[] args)
        {
            int sum = 0;

            for(var i = 1; i < 1000; i++)
            {
                if(i % 3 == 0 || i % 5 == 0)
                {
                    sum = sum + i;
                }
            }

            Console.WriteLine(sum);
        }
    }
}
